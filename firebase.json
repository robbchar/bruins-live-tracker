{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": [
    {
      "target": "bruins-live-tracker-adminweb",
      "public": "admin-web/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["pnpm -C admin-web build"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
